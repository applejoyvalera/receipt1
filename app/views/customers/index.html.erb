<h1>Customers</h1>
<%= link_to "New Customer", new_customer_path %>

<table style="border:1px solid black; width= 50% ">
	<tr>
		<th>Name</th>
		<th>Address</th>
		<th>Business</th>
	</tr>


	<% @customer.each do |t| %>
	<tr style="width= 50% ; text align:1px; text-indent: 5%">
		<td> <%= t.name %> </td>
		<td> <%= t.address%> </td>
		<td> <%= t.business %></td>
		<td>
			<%= link_to "Show", customer_path(t.id) %>
			<%= link_to "Edit", edit_customer_path(t.id) %>
			<%= link_to "Delete", customer_path(t.id), :method => :delete %>
		</td>
	</tr>
	<% end %>
</table>