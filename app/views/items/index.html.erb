<h1>Items</h1>
<%= link_to "New Item", new_item_path %>
<%= link_to "New Customer", new_customer_path %>
<%= link_to "New Order", new_order_path %>

<table style="border:1px solid black; width= 30% ">
	<tr>
		<th>Name</th>
		<th>Unit</th>
		<th>Quantity</th>
		<th>Price</th>
	</tr>

<% @items.each do |t| %>
	<tr style="width: 30% text align:1px; text-indent: 5%">
		<td> <%= t.itemname %> </td>
		<td> <%= t.unit %> </td>
		<td> <%= t.quantity %> </td>
		<td> <%= t.price %> </td>
		<td>
			<%= link_to "Show", item_path(t.id) %>
			<%= link_to "Edit", edit_item_path(t.id) %>
			<%= link_to "Delete", item_path(t.id), :method => :delete %>
		</td>
	</tr>
	<% end %>
</table>